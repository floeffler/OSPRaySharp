<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OSPRay.TestSuite.Scenes.SphereSceneView">

	<Grid ColumnDefinitions="* 40" RowDefinitions="auto, auto" VerticalAlignment="Center">
		<TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">Number of Spheres:</TextBlock>
		<Slider Grid.Column="0" Grid.Row="1" Minimum="1" Maximum="20" Value="{Binding SphereCount}"/>
		<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding SphereCount}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
	</Grid>
	
</UserControl>
